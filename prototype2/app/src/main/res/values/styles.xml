<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
       <!--<item name="colorPrimary">@color/green50400</item>-->
        <item name="colorPrimaryDark">@color/lg50400</item>
        <item name="colorAccent">@color/blue</item>
    </style>


    <!-- Splash application theme -->
    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!-- Login application theme -->
    <style name="AppTheme.Login" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.TextInputLayoutHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/grey_20</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.ToolbarForgetPassword" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/navy_blue</item>
    </style>

    <style name="AppTheme.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.ToolbarMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="android:listDivider">@color/white_25</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowTitleStyle">@style/AppTheme.DialogTitle</item>
    </style>

    <style name="AppTheme.DialogTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>
</resources>